<h1>Gender</h1>
<div class="row expandable" id="mainText">
  <%= render "text" %>
</div>
<a class="btn btn-primary read-more"  href="#mainText" role="button" aria-expanded="false" aria-controls="mainText">Read More</a>
<a class="btn btn-primary"  href="#data" role="button">See the data</a>

<div class="flex-container gender row">
  <div class="col-md">
    <h3>All Candidates</h3>
    <%= pie_chart(
      @gender_data.all_candidates.all_seats.count,
      colors: @gender_data.all_candidates.all_seats.colors,
      legend: false
    ) %>
  </div>
  <div class="col-md">
    <h3>General Population</h3>
    <%= pie_chart(
      @gender_data.genpop.count,
      colors: @gender_data.genpop.colors,
      legend: false
    ) %>
  </div>
</div>

<div class="flex-container gender row">
  <div class="col-md">
    <h3>Labor Candidates</h3>
    <%= pie_chart(
      @gender_data.alp.all_seats.count,
      colors: @gender_data.alp.all_seats.colors,
      legend: false
    ) %>
  </div>
  <div class="col-md">
    <h3>Coalition Candidates</h3>
    <%= pie_chart(
      @gender_data.coalition.all_seats.count,
      colors: @gender_data.coalition.all_seats.colors,
      legend: false
    ) %>
  </div>
</div>

<div class="flex-container gender row">
  <div class="col-md">
    <h3>Labor Candidates in safe seats (and safe senate positions)</h3>
    <%= pie_chart(
      @gender_data.alp.safe.count,
      colors: @gender_data.alp.safe.colors,
      legend: false
    ) %>
  </div>
  <div class="col-md">
    <h3>Coalition Candidates in safe seats (and safe senate positions)</h3>
    <%= pie_chart(
      @gender_data.coalition.safe.count,
      colors: @gender_data.coalition.safe.colors,
      legend: false
    ) %>
  </div>
</div>

<div class="flex-container gender row">
  <div class="col-md">
    <h3>Labor Candidates in swing seats (and possible-to-win senate positions)</h3>
    <%= pie_chart(
      @gender_data.alp.swing.count,
      colors: @gender_data.alp.swing.colors,
      legend: false
    ) %>
  </div>
  <div class="col-md">
    <h3>Coalition Candidates in swing seats (and possible-to-win senate positions)</h3>
    <%= pie_chart(
      @gender_data.coalition.swing.count,
      colors: @gender_data.coalition.swing.colors,
      legend: false
    ) %>
  </div>
</div>

<div class="flex-container gender row">
  <div class="col-md">
    <h3>Labor Candidates in unlikely seats (and unlikely-to-win senate positions)</h3>
    <%= pie_chart(
      @gender_data.alp.unlikely.count,
      colors: @gender_data.alp.unlikely.colors,
      legend: false
    ) %>
  </div>
  <div class="col-md">
    <h3>Coalition Candidates in unlikely seats (and unlikely-to-win senate positions)</h3>
    <%= pie_chart(
      @gender_data.coalition.unlikely.count,
      colors: @gender_data.coalition.unlikely.colors,
      legend: false
    ) %>
  </div>
</div>

<div class="flex-container gender row">
  <div class="col-md">
    <h3>Labor Candidates in Senate</h3>
    <%= pie_chart(
      @gender_data.alp.senate.count,
      colors: @gender_data.alp.senate.colors,
      legend: false,
      suffix: "%"
    ) %>
  </div>
  <div class="col-md">
    <h3>Coalition Candidates in Senate</h3>
    <%= pie_chart(
      @gender_data.coalition.senate.count,
      colors: @gender_data.coalition.senate.colors,
      legend: false
    ) %>
  </div>
</div>

<div class="flex-container gender row">
  <div class="col-md">
    <h3>Labor Candidates in Lower House</h3>
    <%= pie_chart(
      @gender_data.alp.lower_house.count,
      colors: @gender_data.alp.lower_house.colors,
      legend: false
    ) %>
  </div>
  <div class="col-md">
    <h3>Coalition Candidates in Lower House</h3>
    <%= pie_chart(
      @gender_data.coalition.lower_house.count,
      colors: @gender_data.coalition.lower_house.colors,
      legend: false,
    ) %>
  </div>
</div>

<div class="row">
  <h2 id="data">Data</h2>
  <p>
    <strong>House of Representatives 2022 Federal Election</strong>
    <br />
    <%= image_tag "gender_graphic.png" %>
  </p>
</div>