<div id="<%= dom_id field_of_study %>">
  <h2><%= link_to field_of_study.name, field_of_study %></h2>

  <div id="field_of_study-candidates">
    <table id="candidate-field_of_study-table" class="table table-striped">
      <thead>
        <tr>
          <th>Candidate</th>
          <th>Electorate</th>
          <th>Party</th>
          <th>Religion</th>
          <th>Profession</th>
        </tr>
      </thead>
      <% field_of_study.candidates.each do |candidate| %>
        <tr>
          <td><%= link_to candidate.name, candidate %></td>
          <td><%= link_to candidate.electorate.name, candidate.electorate %></td>
          <td><%= link_to candidate.party.name, candidate.party %></td>
          <td><%= link_to candidate.religion.name, candidate.religion %></td>
          <td><%= link_to candidate.profession.name, candidate.profession %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
