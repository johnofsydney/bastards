<p style="color: green"><%= notice %></p>

<h1>Religions</h1>

  <div>
    <h3>Legend</h3>
      <div class="legend red float-start float-lg-none">No Religion</div>
      <div class="legend blue float-start float-lg-none">Catholic</div>
      <div class="legend green float-start float-lg-none">Anglican</div>
      <div class="legend yellow float-start float-lg-none">Other Christian</div>
      <div class="legend indigo float-start float-lg-none">Other</div>
      <div class="legend cyan float-start float-lg-none">Islam</div>
      <div class="legend pink float-start float-lg-none">Buddhism</div>
      <div class="legend purple float-start float-lg-none">Hinduism</div>
      <div class="legend teal float-start float-lg-none">Sikhism</div>
      <div class="legend orange float-start float-lg-none">Judaism</div>
      <div class="legend gray float-start float-lg-none">Unknown</div>
  </div>
  <div>
    <h3>General Population</h3>
    <%= pie_chart(
      @genpop_religions,
      colors: @religion_colors_for_genpop,
      legend: false
    ) %>
  </div>
  <div>
    <h3>All Candidates</h3>
    <%= pie_chart(
      @all_candidates_by_religion_data,
      colors: @religion_colors_for_all_candidates,
      legend: false
    ) %>
  </div>
  <div>
    <h3>ALP Candidates</h3>
    <%= pie_chart(
      @alp_candidates_by_religion_data,
      colors: @religion_colors_for_alp_candidates,
      legend: false
    ) %>
  </div>
  <div>
    <h3>Coalition Candidates</h3>
    <%= pie_chart(
      @coalition_candidates_by_religion_data,
      colors: @religion_colors_for_coalition_candidates,
      legend: false
    ) %>
  </div>


  <div id="religion-candidates">
    <table id="religion-candidate-table" class="table table-striped">
      <thead>
        <tr>
          <th>Candidate</th>
          <th>Party</th>
          <th>Religion</th>
        </tr>
      </thead>
      <% @candidates.each do |candidate| %>
        <tr>
          <td><%= safe_link_to(candidate) %></td>
          <td><%= safe_link_to(candidate.party) %></td>
          <td><%= safe_link_to(candidate.religion) %></td>
        </tr>
      <% end %>
    </table>
  </div>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
$(document).ready(function() {
    $('#religion-candidate-table').DataTable({
      paging: false,
      searching: false
    });
} );
</script>