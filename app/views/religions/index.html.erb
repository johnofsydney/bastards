<p style="color: green"><%= notice %></p>

<h1>Religions</h1>

<p>We found that the politicians claim to be more religious than the rest of us. Shock!</p>

  <div>
    <h2>General Population by Religion</h2>
    <%= pie_chart @genpop_religions %>
  </div>
  <div>
    <h2>ALP by Religion</h2>
    <%= pie_chart @alp_religions %>
  </div>
  <div>
    <h2>Liberals by Religion</h2>
    <%= pie_chart @lib_religions %>
  </div>
  <div>
    <h2>Nationals by Religion</h2>
    <%= pie_chart @nat_religions %>
  </div>

  <div id="religion-candidates">
    <table id="religion-candidate-table" class="table table-striped">
      <thead>
        <tr>
          <th>Candidate</th>
          <th>Party</th>
          <th>Religion</th>
        </tr>
      </thead>
      <% @candidates.each do |candidate| %>
        <tr>
          <td><%= safe_link_to(candidate) %></td>
          <td><%= safe_link_to(candidate.party) %></td>
          <td><%= safe_link_to(candidate.religion) %></td>
        </tr>
      <% end %>
    </table>
  </div>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
$(document).ready(function() {
    $('#religion-candidate-table').DataTable({
      paging: false,
      searching: false
    });
} );
</script>