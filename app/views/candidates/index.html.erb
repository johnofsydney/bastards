<h1>Candidates</h1>


<div id="candidates">
  <table id="candidate-candidate-table" class="table table-striped">
    <thead>
      <tr>
        <th>Candidate</th>
        <th>Electorate</th>
        <th>Party</th>
      </tr>
    </thead>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= safe_link_to(candidate) %></td>
        <td><%= safe_link_to(candidate.electorate) %></td>
        <td><%= safe_link_to(candidate.party) %></td>
      </tr>
    <% end %>
  </table>
</div>






